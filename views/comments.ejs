<%- include('partials/navbar') %>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 text-center">
      <img src="/uploads/composicion-de-deporte-con-elementos-modernos.jpg" alt="Imagen relacionada" class="img-fluid rounded">
       <div class="d-flex justify-content-start gap-3 mb-3">
        <a href="/post/like/<%= postId %>" class="text-decoration-none text-danger">
          <span>
            <i class="bi bi-heart-fill"></i> 12
          </span>
        </a>
      </div>
    </div>

    <div class="col-md-6">
      <h4 class="mb-3">Comments</h4>
      <form action="/post/<%= postId %>/comments" method="POST" class="mb-4">
        <div class="mb-3">
          <textarea required class="form-control" name="comment" rows="3" placeholder="Write your comment here..."></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Comment</button>
      </form>
      <% comments.forEach(item => { %>
        <div class="mb-3 p-3 border rounded bg-light">
          <strong><%= item.author %>:</strong>
          <p><%= item.comment %></p>
        </div>
      <% }) %>
    </div>
  </div>
</div>
